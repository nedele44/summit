@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
@functions{
    string Copy(char s, int amount)
    {
        string str = "";
        for (int i = 0; i < amount; i++)
        {
            str = str + s;
        }
        return str;
    }
}
@for (int j = 1; j < 6; j++)
{
    int amount = 2 * j - 1;
    if (j % 2 == 0)
    {

        <p style="color:red;text-indent:@(6-j)mm;">@Copy('i', amount)</p>

    }
    else
    {

        <p style="color:blue;text-indent:@(6-j)mm;">@Copy('i', amount)</p>

    }
}